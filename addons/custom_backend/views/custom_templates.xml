<odoo>
    <template id="assets_backend" inherit_id="web.assets_backend" name="Add custom CSS to backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css" href="/custom_module/static/src/css/custom_styles.css"/>
        </xpath>
    </template>

    <template id="assets_frontend" inherit_id="web.assets_frontend" name="Add custom CSS to frontend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css" href="/custom_module/static/src/css/custom_styles.css"/>
        </xpath>
    </template>
</odoo>
